<div class="container-fluid px-5">
  <div class"row">
    <h3>注文履歴一覧</h3>
    <table class="table table-bordered my-5">
      <thead class="thead-light">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払合計</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              〒<%= order.shipping_postcode %><br>
              <%= order.shipping_address %><br>
              <%= order.shipping_name %>
            </td>
            <td>
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.item_name %><br>
              <% end %>
            </td>
            <td class="align-middle"><%= order.billing_amount %>円</td>
            <td class="align-middle"><%= order.order_status_i18n %></td>
            <td class="align-middle"><%= link_to '表示する', order_path(order.id), class:"btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>