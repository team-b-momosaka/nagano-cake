<div class="container-fluid px-5 mt-5">
  <div class="row">
    <div>
      <h2>注文履歴一覧</h2>
    </div>
  </div>
  <div class="row my-4">
    <div class="col-sm-12">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払合計</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td>
                〒<%= order.shipping_postcode %><br>
                <%= order.shipping_address %><br>
                <%= order.shipping_name %>
              </td>
              <td class="align-middle">
                <% order.order_details.each do |order_detail| %>
                  <%= order_detail.item.item_name %><br>
                <% end %>
              </td>
              <td class="align-middle"><%= order.billing_amount %>円</td>
              <td class="align-middle"><%= order.order_status_i18n %></td>
              <td class="align-middle text-center"><%= link_to '表示する', order_path(order.id), class:"btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>