<div class="container-fluid px-5">
  <div class"row">
    <h3>注文情報確認</h3>

  <div class="row mt-3">
    <table class="table table-bordered col-sm-7">
      <thead class="thead-light">
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% total = 0 %>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.item_name %></td>
            <td><%= (cart_item.item.no_tax_price * 1.1).floor %></td>    <!--税込価格を求めるメソッドを導入する-->
            <td><%= cart_item.merchandise_quantity %></td>
            <td><%= (cart_item.item.no_tax_price * 1.1).floor * art_item.merchandise_quantity %></td>    <!--小計を求めるメソッドを導入する-->
            <% total += (cart_item.item.no_tax_price * 1.1).floor * art_item.merchandise_quantity %>     <!--小計メソッドを使って書き換える-->
          </tr>
        <% end %>
      </tbody>
    </table>
    <table class="table table-bordered col-sm-3 offset-sm-1">
      <thead class="thead-light">
        <tr><th class="col-sm-6">商品合計</th><td><%= total %></td></tr>
        <% @order.postage = 800 %>
        <tr><th class="col-sm-6">送料</th><td><%= @order.postage %></td></tr>
        <% @order.billing_amount = total + @order.postage %>
        <tr><th class="col-sm-6">請求金額</th><td><%= @order.billing_amount %></td></tr>
      </thead>
    </table>
  </div>

  <div class="row mt-3">
    <table class="table table-borderless col-sm-8">
      <tr style="height: 50px">
        <th class="col-sm-2">支払方法</th>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <th class="col-sm-2">お届け先</th>
        <td>〒<%= @order.shipping_postcode + " " + @order.shipping_address %><br><%= @order.shipping_name %></td>
      </tr>
    </table>
  </div>

    <div class="d-flex justify-content-center mt-3">
      <%= form_with model: @order, url:orders_path, method: :post do |f| %>
        <%= f.hidden_field :customer_id, :value => current_customer.id %>
        <%= f.hidden_field :shipping_postcode, :value => @order.shipping_postcode %>
        <%= f.hidden_field :shipping_address, :value => @order.shipping_address %>
        <%= f.hidden_field :shipping_name, :value => @order.shipping_name %>
        <%= f.hidden_field :postage, :value => @order.postage %>
        <%= f.hidden_field :billing_amount, :value => @order.billing_amount %>
        <%= f.submit ' 注文を確定する ', class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>