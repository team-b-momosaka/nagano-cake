

<div class="container">
    <div class="mt-4 text-center">
      <h2>会員情報編集</h2>
    </div>

  <div class="row justify-content-center">
    <div class="row">
        <%= form_with model: @customer do |f| %>

      <div class="form-group">
        <i>氏名</i>
        <div class="form-inline">
          <label for="InputLastName"></label><div></div>
            <%= f.text_field :last_name, autofocus: true, id:"InputLastName",placeholder:"姓",class: "form-control" %>
          <label for="InputFirstName"></label>
            <%= f.text_field :first_name, autofocus: true, id:"InputFirstName",placeholder:"名",class: "form-control ml-3" %>
        </div>
      </div>

      <div class="form-group">
        <i>フリガナ</i>
        <div class="form-inline">
          <label for="InputLastNameKana"></label>
            <%= f.text_field :last_name_kana, autofocus: true, id:"InputLastNameKana",placeholder:"セイ",class: "form-control" %>
          <label for="InputFirstNameKana"></label>
            <%= f.text_field :first_name_kana, autofocus: true, id:"InputFirstNameKana",placeholder:"メイ",class: "form-control ml-3" %>
        </div>
      </div>


      <div class="form-group">
        <i>郵便番号</i>
        <label for="InputPostalCode"></label>
          <%= f.text_field :postal_code, autofocus: true, id:"InputPostalCode",class: "form-control" %>
      </div>

      <div class="form-group">
        <i>住所</i>
        <label for="InputAddress"></label>
          <%= f.text_field :address, autofocus: true, id:"InputAddress",class: "form-control" %>
      </div>

      <div class="form-group">
        <i>電話番号</i>
        <label for="InputTelNumber"></label>
          <%= f.text_field :telephone_number, autofocus: true, id:"InputTelNumber",class: "form-control" %>
      </div>

      <div class="form-group">
        <i>メールアドレス</i>
        <label for="InputEmail"></label>
           <%= f.email_field :email, autofocus: true, id:"InputEmail",class: "form-control" %>
      </div>

   <div class="justify-content-center d-flex align-items-end">
     <div class="col text-center">
        <%= f.submit "編集内容を保存",class: "btn btn-success" %>
      </div>
      <div class="col text-center">
        <%= link_to "退会する", customers_unsbuscribe_path,class: "btn btn-danger" %>
      </div>
    </div>

<% end %>
</div>
</div >