<h1><%= (@customer.last_name + @customer.first_name) %>さんの会員詳細</h1>
<table class="row table">
  <tr>
    <th>会員ID</th>
    <td></td>
  </tr>
  <tr>
    <th>氏名</th>
    <td><%= @customer.last_name %><%= @customer.first_name %></td>
  </tr>
  <tr>
    <th>フリガナ</th>
    <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
  <tr>
    <th>会員ステータス</th>
    <td><% if @customer.is_deleted %>
        <span class="label label-danger">退会</span>
      <% else %>
        <span class="label label-primary">有効</span>
      <% end %>
    </td>
  </tr>
</table>
<%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-primary" %>
<%= link_to "注文一覧を見る",admin_orders_path, class: "btn btn-success" %>