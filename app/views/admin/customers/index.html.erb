<div class="container">
  <div class="row mt-5">
<h2>会員一覧</h2>
</div>
</div>
<div class="container">
<div class="row">
<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer) %></td>
      <td><%= customer.email %></td>
      <td><% if customer.is_deleted %>
              <span class="label label-danger">退会</span>
            <% else %>
              <span class="text-success">有効</span>
            <% end %>
      </td>
    </tr>
    <% end %>
</tbody>
</table>
</div>
</div>
<div class="text-center">
<%= paginate @customers %>
</div>
