<h1>会員一覧</h1>
<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer) %></td>
      <td><%= customer.email %></td>
      <td><% if customer.is_deleted %>
              <span class="label label-danger">退会</span>
            <% else %>
              <span class="label label-primary">有効</span>
            <% end %>
      </td>
    </tr>
    <% end %>
</tbody>
</table>
<%= paginate @customers %>
