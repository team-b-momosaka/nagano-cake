<div class="container">
  <h3>ジャンル編集</h3>

  <%= form_with model:@genre, url:admin_genre_path, method: :patch do |f| %>
    <div class="field row mt-5">
      <%= f.label:genre, "ジャンル名", class:"col-form-label ml-5" %>
      <%= f.text_field:genre, class:"form-control col-sm-2 mx-5" %>
      <%= f.submit '変更を保存', class:"btn btn-success" %>
    </div>
  <% end %>
</div>
