<div class="container-fluid px-5 mt-5">
  <div class="row">
    <div>
      <h2>ジャンル編集</h2>
    </div>
  </div>
  <div class="field row mt-5">
    <div class="col-sm-10">
      <table>
         <%= form_with model:@genre, url:admin_genre_path, method: :patch do |f| %>
          <tr>
            <td class="col-sm-3"><%= f.label:genre, "ジャンル名", class:"col-form-label ml-5" %></td>
            <td class="col-sm-6"><%= f.text_field:genre, class:"form-control" %></td>
            <td class="col-sm-6"><%= f.submit ' 変更を保存 ', class:"btn btn-success" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
