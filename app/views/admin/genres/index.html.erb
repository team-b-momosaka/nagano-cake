<div class="container">
  <h3>ジャンル一覧・追加</h3>

  <%= form_with model:@genre, url:admin_genres_path, method: :post do |f| %>
    <div class="field row mt-5">
      <%= f.label:genre, "ジャンル名", class:"col-form-label ml-5" %>
      <%= f.text_field:genre, placeholder:"ジャンル名", class:"form-control col-sm-3 mx-5" %>
      <%= f.submit '新規登録', class:"btn btn-success" %>
    </div>
  <% end %>

  <div class="col-sm-4 mt-5">
    <table class="table">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.genre %></td>
            <td class="text-center"><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>