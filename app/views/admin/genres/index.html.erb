<div class="container-fluid px-5 mt-5">
  <div class="row">
    <div>
      <h2>ジャンル一覧・追加</h2>
    </div>
  </div>
  <div class="field row mt-5">
    <div class="col-sm-10">
      <table>
        <%= form_with model:@genre, url:admin_genres_path, method: :post do |f| %>
          <tr>
            <td class="col-sm-3"><%= f.label:genre, "ジャンル名", class:"col-form-label ml-5" %></td>
            <td class="col-sm-6"><%= f.text_field:genre, placeholder:"ジャンル名", class:"form-control" %></td>
            <td class="col-sm-6"><%= f.submit ' 新規登録 ', class:"btn btn-success" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row mt-5 mx-3">
    <div class="col-sm-4">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th colspan="2"><span class="ml-5">ジャンル</span></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="align-middle"><%= genre.genre %></td>
              <td class="text-center"><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>