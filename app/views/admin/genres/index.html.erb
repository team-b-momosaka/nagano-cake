<div class="container-fluid px-5">
  <div class="row">
    <h3>ジャンル一覧・追加</h3>
  </div>
  <%= form_with model:@genre, url:admin_genres_path, method: :post do |f| %>
    <div class="field row mt-5">
      <%= f.label:genre, "ジャンル名", class:"col-form-label ml-5" %>
      <%= f.text_field:genre, placeholder:"ジャンル名", class:"form-control col-sm-3 mx-5" %>
      <%= f.submit ' 新規登録 ', class:"btn btn-success" %>
    </div>
  <% end %>
  <div class="row mt-5 mx-3">
    <div class="col-sm-4">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th colspan="2">  ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.genre %></td>
              <td class="text-center"><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>