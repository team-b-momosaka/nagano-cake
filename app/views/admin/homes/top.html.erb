<div class="container mt-5">
  <div class="row">
    <div>
      <h2>注文履歴一覧</h2>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th scope="col" style="width: 25%">購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order.id) do %>
                  <%= l order.created_at %>
                <% end %>
              </td>
              <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
              <td><%= order.order_details.sum(:quantity) %></td>
              <td><%= order.order_status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="mt-5">
    <%= paginate @orders %>
  </div>
</div>