<h3>注文履歴一覧</h3>
<table class="table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @oreders.each do |oreder| %>
      <tr>
        <td><%= oreder.create_at %></td>
        <td><%= oreder.customer.last_name %></td>
        <td><%= oreder.oreder_details.quantity %></td>
        <td><%= oreder.oreder_status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
