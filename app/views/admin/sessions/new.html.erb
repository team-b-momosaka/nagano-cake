<div class="container mt-5">
  <div class="row justify-content-center">
    <div>
      <h2>管理者ログイン</h2>
    </div>
  </div>
  <div class="row justify-content-center mt-5">
    <div class="col-sm-8">
      <table class="table table-borderless">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <tr>
          <th class="col-sm-3 my-5"><%= f.label :email, 'メールアドレス', class:"col-form-label" %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", class:"form-control" %></td>
        </tr>
        <tr>
          <th class="col-sm-3"><%= f.label :password, 'パスワード', class:"col-form-label" %></th>
          <td><%= f.password_field :password, autocomplete: "current-password", class:"form-control" %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "ログイン", class:"btn btn-primary", style:"width: 40%" %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
  <%= render "admin/shared/links" %>
</div>